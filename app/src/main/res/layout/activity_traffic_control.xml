<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/darker_gray"
    tools:context="com.solthnull.android.trafficcontrol.TrafficControl">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/bg"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/twoRed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_column="6"
            android:layout_row="3"
            android:onClick="colorClick"
            android:paddingLeft="40dp"
            android:paddingTop="48dp"
            android:src="@drawable/red" />

        <ImageView
            android:id="@+id/twoYellow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="colorClick"
            android:paddingLeft="40dp"
            android:paddingTop="15dp"
            android:src="@drawable/yellow" />

        <ImageView
            android:id="@+id/twoGreen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="colorClick"
            android:paddingLeft="38dp"
            android:paddingTop="13dp"
            android:src="@drawable/green" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/bg"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/oneRed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_column="6"
            android:layout_row="3"
            android:clickable="false"
            android:onClick="colorClick"
            android:paddingLeft="40dp"
            android:paddingTop="48dp"
            android:src="@drawable/red" />

        <ImageView
            android:id="@+id/oneYellow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="colorClick"
            android:paddingLeft="40dp"
            android:paddingTop="15dp"
            android:src="@drawable/yellow" />

        <ImageView
            android:id="@+id/oneGreen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="colorClick"
            android:paddingLeft="38dp"
            android:paddingTop="13dp"
            android:src="@drawable/green" />
    </LinearLayout>

    <Button
        android:id="@+id/auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#3b3b3b"
        android:onClick="turnAuto"
        android:padding="15dp"
        android:text="Auto"
        android:textColor="#b5b5b5"
        android:textSize="30dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/stop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/linearLayout"
        android:layout_alignRight="@+id/linearLayout"
        android:layout_alignTop="@+id/auto"
        android:background="#3b3b3b"
        android:onClick="stop"
        android:padding="15dp"
        android:text="Stop"
        android:textColor="#b5b5b5"
        android:textSize="30dp"
        android:textStyle="bold" />

</RelativeLayout>
